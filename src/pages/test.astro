---
import Layout from '../layouts/NewLayout.astro'
import Supabase from '../assets/icons/Supabase.astro'
import AstroIcon from '../assets/icons/AstroIcon.astro'
import Navbar  from '../components/astro/Navbar.astro'

export const prerender = true
const title = 'Supabase and Astro Demo'

---

<Layout title={title}>
  <main>
    <div class="flex flex-col min-h-screen">
      <header class="bg-blue-200 p-4">
        <Navbar title={title} />
      </header>
      <main class="flex-1 flex flex-col gap-4 items-center p-4 justify-center">
        <div class="grid grid-cols-5 grid-rows-5 gap-4 w-full h-full">
          <div class="col-span-5 bg-green-200 p-4">Main</div>
        </div>
      </main>
      <footer class="bg-red-200 p-4">Footer</footer>
    </div>
  </main>      
</Layout>
<style scoped>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
    }
    
    .min-h-screen {
      min-height: 100vh;
    }
    
    .flex-1 {
      flex: 1;
    }
    
    .flex {
      display: flex;
    }
    
    .flex-col {
      flex-direction: column;
    }
    
    .items-center {
      align-items: center;
    }
    
    .justify-center {
      justify-content: center;
    }
    
    .gap-4 {
      gap: 1rem; /* Tailwind CSS typically uses 1rem as the unit for gap-4 */
    }
    
    .p-4 {
      padding: 1rem; /* Tailwind CSS typically uses 1rem as the unit for p-4 */
    }
    
    .w-full {
      width: 100%;
    }
    
    .h-full {
      height: 100%;
    }
    
    .bg-blue-200 {
      background-color: #bfdbfe;
    }
    
    .bg-green-200 {
      background-color: #bbf7d0;
    }
    
    .bg-yellow-200 {
      background-color: #fef9c3;
    }
    
    .bg-red-200 {
      background-color: #fecaca;
    }
    </style>
    